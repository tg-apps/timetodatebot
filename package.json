{
  "name": "timetodatebot",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development bun run ./src/index.ts",
    "build": "NODE_ENV=production bun build --minify --compile ./src/index.ts --outfile=dist/bot",
    "build:linux": "bun run build --target=bun-linux-arm64",
    "build:windows": "bun run build --target=bun-windows-x64",
    "start": "./dist/bot"
  },
  "dependencies": {
    "@grammyjs/runner": "^2.0.3",
    "drizzle-orm": "^0.44.7",
    "grammy": "^1.38.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "typescript": "^5.9.3"
  }
}
